<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <eu.mobiletouch.fotoland.utils.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/collage_layout_image_margin"
            android:background="@drawable/gallery_collage_photo_frame">

            <eu.mobiletouch.fotoland.collage.PhotoView
                android:id="@+id/image_frame_1_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/collage_image_margin"
                android:background="@color/light_gray"/>
        </LinearLayout>
    </eu.mobiletouch.fotoland.utils.SquareLayout>
</LinearLayout>